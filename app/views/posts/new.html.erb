<br />
<section class='d-flex justify-content-center'>
    <div class='card w-75 border-success'>
      <div class='card-header d-flex justify-content-center header'>
        <h2 class='text-success'>Create post</h2>
      </div>

    <div class='card-body'>
      <%= form_with(model: [@user, @post], url:user_posts_path(current_user), method: :post) do |form| %>
        <div class="form-group">
        <%= form.label :title, hidden:true %>
        <%= form.text_field :title, required: true, placeholder:'Title', class:'form-control' %>
    
        <br />
        <%= form.label :content, hidden:true %>
        <%= form.text_area :content, required: true, placeholder: 'Content', class:'post_content' %>

        <br /> <br />
        <div class='d-flex justify-content-center'>
          <%= form.submit 'Create post', class: 'btn btn-outline-primary' %>
        </div>
        
      <% end %>
    </div>
    
  </div>
</section>
