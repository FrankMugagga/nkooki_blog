<br />
<section class='d-flex justify-content-center'>
  <div class='card w-75 border-success'>
    <div class='card-header d-flex justify-content-center header'>
      <h2 class='text-success'>Log in</h2>
    </div>

    <div class='card-body'>
      <%= form_with(model: [@user, @post, @comment], local: true) do |form| %>
        <div class="form-group">
          <%= form.label :comment %>
          <br />
          <%= form.text_area :comment, class:'form-control post_content' %>
        </div>
  
        <div class='d-flex justify-content-center'>
          <%= form.submit "Add comment", class: 'btn btn-outline-primary' %>
        </div>
      <% end %>
    </div>
  </div>

</section>
