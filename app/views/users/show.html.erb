<section class='user_show'>
  <h2 class='d-flex justify-content-center bg-success'>User Profile</h2>

  <div class='p-2'>
    <div class='d-flex justify-content-between'>
      <div class="d-flex justify-content-center align-items-center profile_image_container">
        <% if @user.photo %>
          <%= @user.photo %>
        <% else %>
          <p>no photo!</p>
        <% end %>
      </div>
<% if @user.image? %>
  <%= image_tag @user.image.url %>
  <%else%>
  <p>noooo image</p>
<% end %>
      <div class='d-flex flex-column justify-content-around w-75'>
        <div>
          <%= @user.first_name %>
          <%= @user.last_name %>
        </div>
        <div class='d-flex justify-content-end w-100'>
          Posts: <%= @user.posts_counter %>
        </div>
      </div>
    </div>

    <hr class='d-flex justify-content-center w-50'/>
  
    <span>Contact</span>
    <div class='user_show_contact p-2'>
      <div class='d-flex'>
        <div class='w-50'> Phone: <%= @user.phone %> </div>
        <div class='w-50'> Email: <%= @user.email %> </div>
      </div>
      <div class='w-50'> Twitter: <%= @user.twitter %>  </div>
    </div>

    <br />
    <span>Bio</span>
    <div class='bio p-2'>
      <%= @user.bio %>
    </div>

    <br />
    <div class='d-flex justify-content-end'>Updated:  <%= @user.updated_at %> </div>
    <hr />
  </div>

  <h3> <%= @user.first_name %> <%= @user.last_name %>'s Articles</h3>
  <% if @user_posts.count > 5%>
    <% @user_posts.limit(5).each do |user_post| %>
      <%= render 'partials/post', post: user_post %>
    <% end %>
    <%= link_to 'more posts', user_posts_path(@user.id) %>
  <% else %>
    <% @user_posts.each do |user_post| %>
      <%= render 'partials/post', post: user_post %>
    <% end %>
  <% end %>  
</section>



 
  
